<form action="{{ domainData.SITE_WEB }}/doRegister" method="post">
    <h2>Registrace</h2>

    <!-- Základní údaje pro PHPAuth -->
    <div>
        <label for="email">E-mail:</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <label for="password">Heslo:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <div>
        <label for="repeat_password">Opakování hesla:</label>
        <input type="password" id="repeat_password" name="repeat_password" required>
    </div>

    <!-- Dodatečné údaje pro user_details -->
    <div>
        <label for="fullname">Celé jméno:</label>
        <input type="text" id="fullname" name="fullname">
    </div>
    <div>
        <label for="phone">Telefon:</label>
        <input type="text" id="phone" name="phone">
    </div>
    <div>
        <label for="address">Adresa:</label>
        <input type="text" id="address" name="address">
    </div>
    <div>
        <label for="city">Město:</label>
        <input type="text" id="city" name="city">
    </div>
    <div>
        <label for="country">Země:</label>
        <input type="text" id="country" name="country">
    </div>
    <div>
        <label for="postal_code">PSČ:</label>
        <input type="text" id="postal_code" name="postal_code">
    </div>
    <div>
        <label for="additional_info">Další informace:</label>
        <textarea id="additional_info" name="additional_info"></textarea>
    </div>

    <button type="submit">Registrovat</button>
</form>
